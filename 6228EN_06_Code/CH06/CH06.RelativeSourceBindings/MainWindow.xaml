<Window x:Class="CH06.RelativeSourceBindings.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Button Content="{Binding ActualWidth, RelativeSource={RelativeSource Mode=Self}}" />    
        <TextBlock Text="{Binding ActualHeight, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" />
    </StackPanel>
</Window>
