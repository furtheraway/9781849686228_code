<Window x:Class="CH08._.MultiTriggerDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Multi Trigger Demo" Height="200" Width="450">
    <Window.Resources>
        <Style TargetType="Button" x:Key="hoverStyle">
            <Style.Triggers>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsMouseOver" Value="True" />
                        <Condition Property="IsDefault" Value="True" />
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="Cyan" />
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect />
                        </Setter.Value>
                    </Setter>
                </MultiTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <StackPanel>
        <Button Content="Move mouse over me" FontSize="20" HorizontalAlignment="Center" 
                Margin="20" Padding="6" x:Name="theButton" Style="{StaticResource hoverStyle}"/>
        <CheckBox Content="Default button" IsChecked="{Binding IsDefault, ElementName=theButton, Mode=TwoWay}" Margin="10" FontSize="15"/>
    </StackPanel>
</Window>
